<h1>List of all Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %> - <%= link_to "Delete", destroy_rest_path(restaurant), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this Restaurant"} %>
    </li>
  <% end %>
</ul>
